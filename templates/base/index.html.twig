{% extends 'base.html.twig' %}

{% block stylesheets %}{% endblock %}
{% block title %}{{ category.name }}{% endblock %}

{% block body %}
<header>
    <div class="log indigo lighten-4">
        {% if app.user %}
        <div class="us"><a class="navlog" href="#">Votre espace</a></div>
        <div class="us"><a class="navlog" href="{{ path('app_logout') }}">DÃ©connexion</a></div>
        {% else %}
        <div class="us"><a class="navlog" href="{{ path('app_login') }}">Connexion</a></div>
        <div class="us"><a class="navlog" href="{{ path('app_register') }}">Inscription</a></div>
        {% endif %}
    </div>
</header>
<ul id="slide-out" class="sidenav sidenav-fixed">
    <div class="logo">
        <a href="{{ path('base') }}">DevforDev</a>
    </div>
    <li><a href="{{ path('base') }}">Acceuil</a></li>
    <li id="list">{% for t in theme %}<a href="{{ path('base') }}" id="{{t.id}}">{{ t.name }}</a>{% endfor %}
    </li>
    <li><a href="#">Documention</a></li>
    <li><a href="#">Index</a></li>
</ul>
{% if app.user %}
<div class="mininav indigo lighten-4">
    <div class="nv">
        <a class="modal-trigger" href="#modal1">
            <i class="fas fa-edit"></i>
        </a>
    </div>
    <div class="nv q">
        <a class="modal-trigger" href="#modal2">
            <i class="fas fa-question-circle"></i>
        </a>
    </div>
</div>
{% endif %}
<div class="container">
    <h1 class="title">{{ category.name }}</h1>
    <p>{{ category.description }}</p>
    <div class="section">
        <div class="divider"></div>
        <h5>Liens utiles en relation avec {{ category.name }}</h5>
        <div class="linkloop">
            {% for l in link %}
            <a class="link" href="{{ l.name }}" target="_blank">{{ l.name }}</a>
            {% endfor %}
        </div>
    </div>
    <div class="section">
        <h4>Astuces</h4>
        <div class="astuce">
            {% for a in astuce %}
            {{ a.message }}
            {{ a.user.username }}
            {{ a.date|date("m/d/Y") }}
            {% endfor %}
        </div>
    </div>

    <!-- Modal Structure -->
    <div id="modal1" class="modal bottom-sheet">
        <div class="modal-content">
            <h4>Ajouter votre astuce</h4>
            <div class="row">
            {{ form_start(formAs) }}
                <div class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                        {{ form_widget(formAs.message) }}
                        {{ form_widget(formAs.categoris, {'attr': {'value': category.id}}) }}
                            <label for="textarea1">Message</label>
                        {{ form_widget(formAs.date) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="modal-close waves-effect waves-green btn-flat">Valider</button>
            </div>
             {{ form_end(formAs) }}
        </div>
    </div>

    <div id="modal2" class="modal bottom-sheet">
        <div class="modal-content">
            <h4>Poser votre question</h4>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="textarea1" class="materialize-textarea"></textarea>
                            <label for="textarea1">Question</label>
                            <input type="hidden" name="startdate" id="todayDate"/>
                            <input type="text" value="{{ category.id }}">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close waves-effect waves-green btn-flat">valider</a>
        </div>
    </div>
    {% endblock %}

    {% block javascripts %}
    <script type="text/javascript">
        function getDate() {
            var today = new Date();
            var date = today.getFullYear()+'-'+(today.getMonth()+1)+'-'+today.getDate();
            document.getElementById("astuce_date").value = date;
        }

        getDate();
    </script>
    {% endblock %}
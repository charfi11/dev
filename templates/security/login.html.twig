{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="../css/login.css">
{% endblock %}

{% block body %}
<header>
    <div class="log indigo lighten-4">
        <div class="us"><a class="navlog" href="{{ path('base') }}">Acceuil</a></div>
        <div class="us"><a class="navlog" href="{{ path('app_register') }}">Inscription</a></div>
    </div>
</header>
<form method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
        Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
    </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
    <label for="inputUsername">Pseudonyme</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required
        autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="waves-effect waves-green btn-flat teal darken-1 btnform" type="submit">
        Se connecter
    </button>
</form>
{% endblock %}

{% block javascripts %}{% endblock %}